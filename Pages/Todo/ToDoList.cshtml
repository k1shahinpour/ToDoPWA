@section Scripts{

    <script>
        var app = new Vue({
            el: "#app",
            data: {
                items: []
            },
            created: function () {
                this.getItems();
            },
            methods: {
                getItems: function () {
                    var vm = this;
                    $.ajax({ url: "ToDoList?handler=Items", method: "GET" })
                        .done(function (data) {
                            vm.items = data;
                        }).fail(function () { });
                }
            }
        });
    </script>

}