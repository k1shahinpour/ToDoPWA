            <span class=""> {{item.dueDate}}</span>
            </div>
            <div class="col-3 d-flex justify-content-end">
                <a class="btn fa fa-sticky-note"></a>
                <a class="btn fa fa-pen"></a>
                <a class="btn fa fa-trash"></a>


            </div>
        </div>

    </div>
</div>
